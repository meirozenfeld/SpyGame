WindowManager:
    MainWindow:
    NamesWindow:
    GameWindow:
    TimeWindow:
    EndGameWindow:

<MainWindow>
    name: "main"
    orientation: 'vertical'


    BoxLayout:
        orientation: 'vertical'
        height: '40dp'

        Image:
            source: "images/spy_icon.png"
            size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
            height: dp(150)  # The fixed height you want
        Label:
            text: 'Players'

        TextInput:
            id: num_players_input
            hint_text: 'Number of Players'
            input_filter: 'int'
            multiline: False


        Label:
            text: 'Spies'

        TextInput:
            id: num_spies_input
            hint_text: 'Number of Spies'
            input_filter: 'int'
            multiline: False


        Label:
            text: 'Game Time'

        TextInput:
            id: game_time_input
            hint_text: 'Game Time (minutes)'
            input_filter: 'int'
            multiline: False

        Button:
            text: 'Next'
            on_press: root.save_data()
            on_release: app.root.current = "names"


<NamesWindow>
    name: "names"
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'



<GameWindow>
    name: "game"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Start Time'
            on_release: app.root.current = "time"


<TimeWindow>
    name: "time"


<EndGameWindow>
    name: "end"
